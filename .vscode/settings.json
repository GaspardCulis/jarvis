{
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		"bin": true,
		"lib": true,
		"pyvenv.cfg": true
	},
	"hide-files.files": ["bin", "lib", "pyvenv.cfg"],
	"[python]": {
		"editor.defaultFormatter": "ms-python.autopep8"
	},
	"python.formatting.provider": "none",
	"python.analysis.typeCheckingMode": "basic"
}
